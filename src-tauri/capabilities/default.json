{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.magnetlink-optimizer-pro.app"
        },
        {
          "path": "$APPDATA/com.magnetlink-optimizer-pro.app/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.magnetlink-optimizer-pro.app"
        },
        {
          "path": "$APPDATA/com.magnetlink-optimizer-pro.app/*"
        }
      ]
    }
  ]
}
